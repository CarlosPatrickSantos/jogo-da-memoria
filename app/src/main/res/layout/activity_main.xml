<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/imagem_fundo"> <!-- Ajuste o nome da sua imagem de fundo aqui -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp"
        tools:context=".MainActivity">

        <!-- Título do Jogo (Sempre visível) -->
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogo da Memória"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- LAYOUT PARA PONTUAÇÃO E TEMPO (game_status_layout) -->
        <LinearLayout
            android:id="@+id/game_status_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gameTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pontos: 0"
                android:textSize="22sp"
                android:textColor="#006400"
                android:layout_marginEnd="32dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/pointsChangeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:elevation="2dp"
                android:alpha="0.0"
                android:translationY="0dp"

                tools:text="+5"
                tools:textColor="@color/green_strong"
                />

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo: 90s"
                android:textSize="22sp"
                android:textColor="#FF4500"
                android:textStyle="bold"
                />

        </LinearLayout>
        <!-- LAYOUT PARA O MANUAL/REGRAS (gameRulesText) -->
        <TextView
            android:id="@+id/gameRulesText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Regras do Jogo:\n\n1. O objetivo é encontrar todos os pares de cartas.\n2. Vire duas cartas por vez. Se forem iguais, elas permanecem viradas.\n3. Se forem diferentes, elas viram para baixo novamente.\n4. Tente completar o jogo no menor tempo possível para uma maior pontuação.\n\nBoa sorte!"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:padding="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gameTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/restartGameButton"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" />

        <!-- LAYOUT PARA AS CARTAS (card_grid_layout) -->
        <GridLayout
            android:id="@+id/card_grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/game_status_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gameEndRestartButton"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone">

            <ImageView android:id="@+id/card1" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card2" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card3" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card4" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card5" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card6" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card7" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card8" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card9" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card10" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card11" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card12" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>

            <ImageView android:id="@+id/card13" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card14" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card15" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card16" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card17" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card18" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card19" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>
            <ImageView android:id="@+id/card20" android:layout_width="80dp" android:layout_height="100dp" android:scaleType="fitCenter"/>

        </GridLayout>

        <!-- BOTÃO COMEÇAR JOGO (restartGameButton) - Usado SOMENTE na tela inicial -->
        <Button
            android:id="@+id/restartGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Começar Jogo"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/gameRulesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/highScoreTitle"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" />

        <!-- PLACAR DE PONTUAÇÕES (highScoreTitle e Textviews 1-5) -->
        <TextView
            android:id="@+id/highScoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 5 Jogadores"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restartGameButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" />

        <TextView android:id="@+id/highScore1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1. ---" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/highScore2" app:layout_constraintStart_toStartOf="@+id/highScoreTitle" app:layout_constraintTop_toBottomOf="@+id/highScoreTitle" android:visibility="visible"/>
        <TextView android:id="@+id/highScore2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2. ---" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/highScore3" app:layout_constraintStart_toStartOf="@+id/highScoreTitle" app:layout_constraintTop_toBottomOf="@+id/highScore1" android:visibility="visible"/>
        <TextView android:id="@+id/highScore3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3. ---" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/highScore4" app:layout_constraintStart_toStartOf="@+id/highScoreTitle" app:layout_constraintTop_toBottomOf="@+id/highScore2" android:visibility="visible"/>
        <TextView android:id="@+id/highScore4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4. ---" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/highScore5" app:layout_constraintStart_toStartOf="@+id/highScoreTitle" app:layout_constraintTop_toBottomOf="@+id/highScore3" android:visibility="visible"/>
        <TextView android:id="@+id/highScore5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5. ---" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/resetScoresButton" app:layout_constraintStart_toStartOf="@+id/highScoreTitle" app:layout_constraintTop_toBottomOf="@+id/highScore4" android:visibility="visible"/>

        <Button
            android:id="@+id/resetScoresButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zerar Placar"
            android:layout_marginTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/highScore5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/in_game_admin_buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/resetScoresButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/togglePeekButton"
            android:visibility="gone">
            <Button
                android:id="@+id/addMinuteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar 1 Minuto"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:backgroundTint="#673AB7"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />
            <Button
                android:id="@+id/revealCardsInGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revelar Cartas"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="18sp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/togglePeekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desativar Revelar Cartas"
            android:layout_marginTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#00BCD4"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/in_game_admin_buttons_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/goToPhase3Button"
            android:visibility="visible" />

        <Button
            android:id="@+id/goToPhase3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir para Fase 3"
            android:layout_marginTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#8BC34A"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/togglePeekButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />


        <Button
            android:id="@+id/gameEndRestartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar Jogo"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/card_grid_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/highScoreTitle"
            android:visibility="gone" />

        <nl.dionsegijn.konfetti.KonfettiView
            android:id="@+id/konfetti_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>